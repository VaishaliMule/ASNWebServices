@model TechnosoftModel.SubscriptionService
@{
    Layout = null;
}
<!DOCTYPE html>

<html lang="en">
<!--begin::Head-->
<head>

    <style>
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<!--end::Head-->
<body>
    <div class="modal-dialog" role="dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                <div><h5>Are you sure you want to delete this Service?</h5></div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>

            </div>
            <div class="modal-body">
                <div class="row justify-content-center">
                    <div class="col-xl-12 col-xxl-7">

                        @Html.HiddenFor(model => model.Id)
                        <h6 class="font-weight-bolder mb-3">Service Details:</h6>
                        <table class="table table-bordered">
                            <tr>
                                <th>Service Name</th>
                                <td> @Html.DisplayFor(model => model.ServiceName)</td>
                            </tr>
                            <tr>
                                <th>Service Amount</th>
                                <td>@Html.DisplayFor(model => model.ServiceAmount)</td>
                            </tr>
                            <tr>
                                <th>Quantity</th>
                                <td>@Html.DisplayFor(model => model.Quantity)</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>@Html.DisplayFor(model => model.Description)</td>
                            </tr>
                            <tr>
                                <th>Logo</th>
                                <td>@Html.DisplayFor(model => model.Logo)</td>
                            </tr>
                        </table>
                        <div class="separator separator-dashed my-5"></div>


                        <br />
                        <!--begin::Wizard Form-->
                        @using (Ajax.BeginForm("Delete", "Services", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "DeleteAssetSuccess" }, new { @class = "form-horizontal", role = "form" }))
                        {

                            <div class="form-actions no-color">
                                @Html.HiddenFor(x => x.Id)
                                <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                @Html.ActionLink("Back to List", "AllServices", null, new { data_dismiss = "modal" })
                            </div>
                        }
                        <!--end::Wizard Form-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<!--end::Body-->
</html>


