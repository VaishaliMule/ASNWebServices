                                }
                            }
                            else
                            {*@
                        @using (Html.BeginForm("OTPVerification", "Account"))
                        {
                            @Html.AntiForgeryToken()
                            <form class="form" novalidate="novalidate" id="kt_login_signup_form">
                                <!--begin: Wizard Step 1-->
                                <div class="pb-5" data-wizard-type="step-content" data-wizard-state="current">

                                    <div class="form-group">

                                        @Html.LabelFor(model => model.EmailOTP, htmlAttributes: new { @class = "font-size-h6 font-weight-bolder text-dark" })
                                        @Html.EditorFor(model => model.EmailOTP, new { htmlAttributes = new { @class = "form-control h-auto py-7 px-6 border-0 rounded-lg font-size-h6", placeholder = "Enter Email OTP", autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.EmailOTP, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">

                                        @Html.LabelFor(model => model.SMSOTP, htmlAttributes: new { @class = "font-size-h6 font-weight-bolder text-dark" })
                                        @Html.EditorFor(model => model.SMSOTP, new { htmlAttributes = new { @class = "form-control h-auto py-7 px-6 border-0 rounded-lg font-size-h6", placeholder = "Enter Mobile OTP", autocomplete = "off", required = "Please enter Mobile OTP" } })
                                        @Html.ValidationMessageFor(model => model.SMSOTP, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="row">
                                        <div class="row col-md-10">
                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" name="prevBtn" value='Previous' class="btn btn-primary font-weight-bolder text-uppercase px-9 py-4 my-3 mr-3" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row col-md-2">
                                            <div class="form-group">
                                                <div class="col-md-offset-6 col-md-6">
                                                    <input type="submit" name="nextBtn" value='Next' class="btn btn-primary font-weight-bolder text-uppercase px-9 py-4 my-3" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <!--end: Wizard Step 1-->


                            </form>

                            <!--end::Form-->
                        }

                    </div>

                    <!--end::Signin-->
                </div>
                <!--end::Wrapper-->
            </div>
            <!--end::Content-->
        </div>
        <!--end::Login-->
