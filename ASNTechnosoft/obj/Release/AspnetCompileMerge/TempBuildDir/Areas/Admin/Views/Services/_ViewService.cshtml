@model TechnosoftModel.SubscriptionService
@{
    Layout = null;
}
<!DOCTYPE html>

<html lang="en">

<head>
    <link href="/Content/dist/assets/plugins/custom/datatables/datatables.bundle.css?v=7.0.4" rel="stylesheet" type="text/css" />
    <style>
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<!--end::Head-->
<!--begin::Body-->
<body>
    <div class="modal-dialog">
        @*//modal-lg modal-xl modal-dialog-scrollable*@
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Service Details</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i aria-hidden="true" class="ki ki-close"></i>
            </button>
        </div>
        <div class="modal-body">
            <!--begin::Main-->
            <!--begin::Wizard-->
            <div class="row justify-content-center my-10 px-8 my-lg-15 px-lg-10">
                <div class="col-xl-12 col-xxl-12">

                    @Html.HiddenFor(model => model.Id)
                    <h6 class="font-weight-bolder mb-3">Service Details:</h6>
                    <table class="table table-bordered">
                        <tr>
                            <th>Service Name</th>
                            <td> @Html.DisplayFor(model => model.ServiceName)</td>
                        </tr>
                        <tr>
                            <th>Service Amount</th>
                            <td>@Html.DisplayFor(model => model.ServiceAmount)</td>
                        </tr>
                        <tr>
                            <th>Quantity</th>
                            <td>@Html.DisplayFor(model => model.Quantity)</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>@Html.DisplayFor(model => model.Description)</td>
                        </tr>
                        <tr>
                            <th>Logo</th>
                            <td>
                    <div class="col-md-10">
                        <div class="image-input image-input-empty image-input-outline" id="kt_image_5" style="background-image: url(/Content/dist/assets/media/users/blank.png) ">
                            @if (Model.Logo != null)
                            {
                                <div class="image-input-wrapper w-lg-250px h-lg-175px" style="background-image: url('/ServiceLogo/@Model.LogoFileName')"></div>
                            }
                            else
                            {
                                <div class="image-input-wrapper w-lg-250px h-lg-175px" style="background-image: url(/Content/dist/assets/media/users/blank.png)"></div>
                            }

                            @*<label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="change" data-toggle="tooltip" title="" data-original-title="Change Photo">
                                <i class="fa fa-pen icon-sm text-muted"></i>
                                <input type="file" name="PhotoImageFile" accept=".png, .jpg, .jpeg" />
                                <input type="hidden" name="profile_avatar_remove" />
                            </label>

                            <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="Cancel Photo">
                                <i class="ki ki-bold-close icon-xs text-muted"></i>
                            </span>

                            <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="remove" data-toggle="tooltip" title="Remove Photo">
                                <i class="ki ki-bold-close icon-xs text-muted"></i>
                            </span>*@
                        </div>

                    </div>
               </td>
                        </tr>
                        
                    </table>



                </div>
            </div>
            <!--end::Main-->
        </div>
    </div>
</div>
<script src="/Content/dist/assets/plugins/global/plugins.bundle.js?v=7.0.4"></script>
<script src="/Content/dist/assets/plugins/custom/prismjs/prismjs.bundle.js?v=7.0.4"></script>
<script src="/Content/dist/assets/js/scripts.bundle.js?v=7.0.4"></script>
<script src="/Content/dist/assets/plugins/custom/datatables/datatables.bundle.js?v=7.0.4"></script>
<script src="/Content/dist/assets/js/pages/crud/datatables/basic/scrollable.js?v=7.0.4"></script>
<script type="text/javascript">
    $.noConflict();
    jQuery(document).ready(function ($) {
        $("#tblData").DataTable({
            paging: false,
            scrollY: '50vh',
            scrollX: true,
            scrollCollapse: true,
            searching: false,
        });
    });
</script>
</body>
<!--end::Body-->
</html>

