@model ASNTechnosoft.Models.UserLogin
@{
    Layout = null;
}



<!DOCTYPE html>

<html lang="en">
<!--begin::Head-->
<head>
   
    <title>ASN Technosoft | Login</title>

   
   
    <link href="/Content/dist/assets/css/pages/login/login-2.css?v=7.0.4" rel="stylesheet" type="text/css" />
    
    <link href="/Content/dist/assets/plugins/global/plugins.bundle.css?v=7.0.4" rel="stylesheet" type="text/css" />
    <link href="/Content/dist/assets/plugins/custom/prismjs/prismjs.bundle.css?v=7.0.4" rel="stylesheet" type="text/css" />
    <link href="/Content/dist/assets/css/style.bundle.css?v=7.0.4" rel="stylesheet" type="text/css" />
  
    <link rel="shortcut icon" href="/Content/dist/assets/media/logos/ASNLogo.jpg" />
  
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled page-loading">
    <div class="d-flex flex-column flex-root">
        <!--begin::Login-->
        <div class="login login-2 login-signin-on d-flex flex-column flex-lg-row flex-row-fluid bg-white" id="kt_login">
            <!--begin::Aside-->
            <div class="login-aside order-2 order-lg-1 d-flex flex-column-fluid flex-lg-row-auto bgi-size-cover bgi-no-repeat p-7 p-lg-10">
                <!--begin: Aside Container-->
                <div class="d-flex flex-row-fluid flex-column justify-content-between">
                    <!--begin::Aside body-->
                    <div class="d-flex flex-column-fluid flex-column flex-center mt-5 mt-lg-0">
                        <a href="#" class="mb-15 text-center">
                            <img src="~/Content/dist/assets/media/logos/ASNLogo1.png" class="max-h-75px" alt="">
                        </a>
                        <!--begin::Signin-->
                        <div class="login-form login-signin">
                           
                            <div class="text-center mb-10 mb-lg-20">
                                <h2 class="font-weight-bold">Forgot Password ?</h2>
                                <p class="text-muted font-weight-bold">Enter your email to reset your password</p>
                            </div>
                            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @id = "kt_login_signin_form" }))
                            {
                                @Html.AntiForgeryToken()


                                <div class="form-group">
                                    <label class="font-size-h6 font-weight-bolder text-dark">Email</label>

                                    @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control form-control-solid h-auto py-6 rounded-lg", placeholder = "Enter Your Email-Id", autocomplete = "off", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })

                                </div>

                                <div class="text-center pt-2">
                                    <input type="submit" id="kt_login_signin_submit" value="Submit" class="btn btn-primary font-weight-bolder text-uppercase px-8 py-4 my-3 font-size-h6" />
                                    &nbsp;&nbsp;&nbsp;&nbsp;@Html.ActionLink("Cancel", "Login", null, new { @class = "btn btn-danger font-weight-bolder text-uppercase px-8 py-4 my-3 font-size-h6" })
                                </div>

                            }
                        </div>
                        <!--end::Signin-->
                        
                    </div>
                    <!--end::Aside body-->
                    <!--begin: Aside footer for desktop-->
                    <div class="d-flex flex-column-auto justify-content-between mt-10">
                        <label>© 2021 <a href="http://asntechnosoft.com/" target="_blank" class="text-dark-75 text-hover-primary"> ASN Technosoft</a></label>

                        <div class="d-flex order-1 order-sm-2 my-2">
                            <a href='@Url.Action("About","Home")' target="_blank" class="nav-link pr-3 pl-0">About</a>

                            <a href='@Url.Action("Contact","Home")' target="_blank" class="nav-link pl-3 pr-0">Contact</a>
                        </div>
                    </div>
                    <!--end: Aside footer for desktop-->
                </div>
                <!--end: Aside Container-->
            </div>
            <!--begin::Aside-->
            <!--begin::Content-->
            <div class="order-1 order-lg-2 flex-column-auto flex-lg-row-fluid d-flex flex-column p-7" style="background-image: url(../../Content/dist/assets/media/bg/bg-9.jpg);">
                <!--begin::Content body-->
                <div class="d-flex flex-column-fluid flex-lg-center">
                    <div class="d-flex flex-column justify-content-center">
                        <a href="#" class="text-center pt-2">
                            <img src="~/Content/dist/assets/media/logos/IMsLogo2.png" class="max-h-75px" alt="" />
                        </a>
                        <h3 class="display-3 font-weight-bold my-7 text-white">Welcome to Nakshatra!</h3>
                        <p class="font-weight-bolder font-size-h2-md font-size-lg text-white text-center">
                            Institute Management System
                        </p>
                    </div>
                </div>
                <!--end::Content body-->
            </div>
            <!--end::Content-->
        </div>
        <!--end::Login-->
    </div>











    <!--begin::Main-->
    
   
    <script src="/Content/dist/assets/plugins/global/plugins.bundle.js?v=7.0.4"></script>
    <script src="/Content/dist/assets/plugins/custom/prismjs/prismjs.bundle.js?v=7.0.4"></script>
    <script src="/Content/dist/assets/js/scripts.bundle.js?v=7.0.4"></script>
    <!--end::Global Theme Bundle-->
   

    @if (TempData["message"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                @Html.Raw(TempData["message"]);
            });
        </script>
        TempData["message"] = null;
    }

</body>
<!--end::Body-->


</html>











































