@model IEnumerable<TechnosoftModel.AllBatchesByInstituteId_Result>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html lang="en">
<!--begin::Head-->
<head>

   
    <link href="/Content/dist/assets/plugins/custom/datatables/datatables.bundle.css?v=7.0.4" rel="stylesheet" type="text/css" />
    
    <style>
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled page-loading">
    <div class="subheader py-1 py-lg-2 subheader-transparent" id="kt_subheader">
        <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline mr-5">
                    <!--begin::Page Title-->
                    <h5 class="text-dark font-weight-bold my-2 mr-5">Batch</h5>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Manage Batch</a>
                        </li>

                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
        </div>
    </div>
    <div class="container">

        <!--begin::Card-->
        <div class="card">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        Manage Batch
                    </h3>
                </div>
                <div class="card-toolbar">
                    <div class="row">
                        <div id="buttons"></div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <button type="button" class="btn btn-success" onclick=PopupAddForm('@Url.Action("Create", "Batch" )')>
                            Add New Batch
                        </button>
                    </div>

                    <!--end::Button-->
                </div>
            </div>
            <div class="card-body">
                <!--begin: Datatable table table-bordered table-checkable dataTable no-footer -->
                <table class="table table-bordered table-hover table-checkable dataTable no-footer collapsed " id="coursedt">
                    <thead>
                        <tr style="background-color:cadetblue">
                            <th>
                                <label class="font-weight-boldest text-dark"> @Html.DisplayNameFor(model => model.SN)</label>
                            </th>
                            <th>
                                <label class="font-weight-boldest text-dark">@Html.DisplayNameFor(model => model.CourseName)</label>
                            </th>
                            <th>
                                <label class="font-weight-boldest text-dark"> @Html.DisplayNameFor(model => model.Name)</label>
                            </th>
                            <th>
                                <label class="font-weight-boldest text-dark"> @Html.DisplayNameFor(model => model.StartDate)</label>
                            </th>
                            <th>
                                <label class="font-weight-boldest text-dark">@Html.DisplayNameFor(model => model.EndDate)</label>
                            </th>
                            <th>
                                <label class="font-weight-boldest text-dark"> @Html.DisplayNameFor(model => model.Target)</label>
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SN)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CourseName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.StartDate))
                                </td>
                                <td>
                                    @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.EndDate))
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Target)
                                </td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-clean btn-icon mr-2 btn-primary" title="Edit" data-toggle="tooltip" data-placement="left" data-theme="dark" onclick=PopupForm('@Url.Action("Edit","Batch",new { id=@item.Id})')>
                                        <span><i class="flaticon-edit-1"></i></span>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-clean btn-icon mr-2 btn-success" title="View" data-toggle="tooltip" data-placement="left" data-theme="dark" onclick=PopupViewForm('@Url.Action("View","Batch",new { id=@item.Id})')>
                                        <span><i class="flaticon-eye"></i></span>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-clean btn-icon mr-2 btn-danger" data-toggle="tooltip" title="Delete" data-placement="left" data-theme="dark" onclick=PopupDeleteForm('@Url.Action("Delete","Batch",new { id=@item.Id})')>
                                        <span><i class="flaticon-delete"></i></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!--end: Datatable-->
            </div>
        </div>
        <!--end::Card-->
    </div>
    <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true" data-backdrop="static">
        <div id="addContainer">

        </div>
    </div>


    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true" data-backdrop="static">
        <div id="editContainer">

        </div>
    </div>

    <div class="modal fade" id="viewModal" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true" data-backdrop="static">
        <div id="viewContainer">

        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true" data-backdrop="static">
        <div id="deleteContainer">

        </div>
    </div>
    <div class="modal fade" id="courseFeesModal" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true" data-backdrop="static">
        <div id="courseFeesContainer">

        </div>
    </div>
    <!--begin::Main-->

