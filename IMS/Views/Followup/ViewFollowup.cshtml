@model IMS.Models.FollowupModel
@{
    ViewBag.Title = "ViewFollowup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html lang="en">
<!--begin::Head-->
<head>

   
    <link href="/Content/dist/assets/plugins/custom/datatables/datatables.bundle.css?v=7.0.4" rel="stylesheet" type="text/css" />
    
    <style>
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled page-loading">
    <div class="subheader py-1 py-lg-2 subheader-transparent" id="kt_subheader">
        <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline mr-5">
                    <!--begin::Page Title-->
                    <h5 class="text-dark font-weight-bold my-2 mr-5">Admission</h5>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Enquiry Followup</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a class="text-muted">View Followup</a>
                        </li>
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->

        </div>
    </div>
    <div class="container">

        <!--begin::Card-->
        <div class="card">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        View Followup
                    </h3>
                </div>

            </div>
            <div class="card-body">
                <!--begin: Datatable table table-bordered table-checkable dataTable no-footer -->
                <table class="table table-bordered">
                    <tr>
                        <th>Student Name</th>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <th>Course</th>
                        <td>@Html.DisplayFor(model => model.CourseName)</td>
                    </tr>
                    <tr>
                        <th>Date of Enquiry</th>
                        <td>@Html.DisplayFor(model => model.DOEnquiry)</td>
                    </tr>
                    <tr>
                        <th>Mobile</th>
                        <td>@Html.DisplayFor(model => model.Mobile)</td>
                    </tr>
                    <tr>
                        <th>Parent Mobile</th>
                        <td>@Html.DisplayFor(model => model.ParentMobile)</td>
                    </tr>

                </table>
                <div class="separator separator-dashed my-5"></div>
                <h3><b>Enquiry Followup list</b></h3>
                <table class="table table-bordered table-hover" id="tblData">
                    <tr style="background-color:cadetblue">
                        <th>SN</th>
                        <th>Follow Up Date</th>
                        <th>Follow Up Comment</th>
                        <th>Follow up By Staff</th>

                    </tr>
                    @foreach (var followup in Model.EnquiryFollowuplistofStudent)
                    {
                        <tr>
                            <td>@followup.SN</td>
                            <td>@followup.HistoryDate</td>
                            <td>@followup.Comments</td>
                            <td>@followup.StaffName</td>
                        </tr>

                    }
                </table>

                <div class="d-flex justify-content-between border-top mt-5 pt-10">
                    <div>
                        <a href="@Url.Action("Index","Followup")" id="backLink" class="btn btn-bg-danger font-weight-bold text-uppercase px-9 py-4">Back</a>
                    </div>
                </div>
            </div>
        </div>
        <!--end::Card-->
    </div>


    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>*@
    @*<script type="text/javascript">
            $(document).on('click', '#backLink', function () {
                history.go(-1);
            });
        </script>*@
    <script src="/Content/dist/assets/plugins/custom/datatables/datatables.bundle.js?v=7.0.4"></script>
    <script src="/Content/dist/assets/js/pages/crud/datatables/basic/scrollable.js?v=7.0.4"></script>
    <script type="text/javascript">
        $.noConflict();
        jQuery(document).ready(function ($) {
            $("#tblData").DataTable({
                paging: false,
                scrollY: '50vh',
                scrollX: true,
                scrollCollapse: true,
                searching: false,
            });
        });
    </script>
    <script type="text/javascript">
        history.pushState(null, null, location.href);
        window.onpopstate = function () {
            history.go(1);
        };
    </script>
</body>

</html>



