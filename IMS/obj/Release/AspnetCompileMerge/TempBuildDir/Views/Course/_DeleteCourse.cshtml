@model IMS.Models.CourseModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html lang="en">
<!--begin::Head-->
<head>
    
    <style>
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<!--end::Head-->
<body>
    <div class="modal-dialog" role="dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                <div><h5>Are you sure you want to delete this Course?</h5></div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>

            </div>
            <div class="modal-body">
                <div class="row justify-content-center">
                    <div class="col-xl-12 col-xxl-7">

                        @Html.HiddenFor(model => model.CourseId)
                        <h6 class="font-weight-bolder mb-3">Course Details:</h6>
                        <table class="table table-bordered">
                            <tr>
                                <th>Course Type</th>
                                <td> @Html.DisplayFor(model => model.CourseType)</td>
                            </tr>
                            <tr>
                                <th>Course Name</th>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                            </tr>
                            <tr>
                                <th>Code</th>
                                <td>@Html.DisplayFor(model => model.Code)</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>@Html.DisplayFor(model => model.Description)</td>
                            </tr>
                            <tr>
                                <th>Duration</th>
                                <td>@Html.DisplayFor(model => model.Duration) Months</td>
                            </tr>
                            <tr>
                                <th>Course Pattern</th>
                                <td>@Html.DisplayFor(model => model.CoursePattern)</td>
                            </tr>
                            <tr>
                                <th>Course selection Limit</th>
                                <td>@Html.DisplayFor(model => model.CourseSelectionLimit)</td>
                            </tr>
                        </table>
                        <div class="separator separator-dashed my-5"></div>


                        <br />
                        <!--begin::Wizard Form-->
                        @using (Ajax.BeginForm("Delete", "Course", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "DeleteAssetSuccess" }, new { @class = "form-horizontal", role = "form" }))
                        {

                            <div class="form-actions no-color">
                                @Html.HiddenFor(x => x.CourseId)
                                <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                @Html.ActionLink("Back to List", "Index", null, new { data_dismiss = "modal" })
                            </div>
                        }
                        <!--end::Wizard Form-->
                    </div>
                </div>

            
                @*<script src="/Content/dist/assets/plugins/global/plugins.bundle.js?v=7.0.4"></script>
                <script src="/Content/dist/assets/plugins/custom/prismjs/prismjs.bundle.js?v=7.0.4"></script>
                <script src="/Content/dist/assets/js/scripts.bundle.js?v=7.0.4"></script>*@
              

            </div>

        </div>
    </div>
</body>
<!--end::Body-->
</html>


